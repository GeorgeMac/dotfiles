theme = Gruvbox Dark
palette = 1=#d65d0e
palette = 9=#fe8019
font-family = MapleMono-NF
font-size = 14

keybind = shift+enter=text:\x1b\r

# Tab navigation
keybind = cmd+alt+left=previous_tab
keybind = cmd+alt+right=next_tab

# Move current tab left/right in the tab bar
keybind = cmd+alt+shift+left=move_tab:-1
keybind = cmd+alt+shift+right=move_tab:1

# Split creation
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down

# Split navigation
keybind = cmd+ctrl+left=goto_split:left
keybind = cmd+ctrl+right=goto_split:right
keybind = cmd+ctrl+up=goto_split:top
keybind = cmd+ctrl+down=goto_split:bottom

# Split resizing
keybind = cmd+shift+left=resize_split:left,40
keybind = cmd+shift+right=resize_split:right,40
keybind = cmd+shift+up=resize_split:up,40
keybind = cmd+shift+down=resize_split:down,40

# Equalize split sizes
keybind = cmd+shift+e=equalize_splits
