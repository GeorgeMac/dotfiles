{
  "suggest": { "noselect": true },
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"],
      "initializationOptions": {
        "buildFlags": ["-tags=mage"]
      }
    }
  },
  "[typescript][typescriptreact][javascript][javascriptreact]": {
    "coc.preferences.formatOnSave": true,
  }
}
